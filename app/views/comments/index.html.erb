<h1>Listing comments</h1>

<table>
  <tr>
    <th>Commenter</th>
    <th>Body</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.commenter %> </td>
    <td><%= comment.body %></td>

    <!-- /photos/:photo_id/comments/:id -->
    <td><%= link_to 'Show', [comment.photo, comment] %></td>
    <!-- /photos/:photo_id/comments/:id/edit -->
    <td><%= link_to 'Edit', edit_photo_comment_path(comment.photo, comment)%></td>
    <!-- /photos/:photo_id/comments/:id -->
    <td><%= link_to 'Destroy', [comment.photo, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

